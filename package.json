{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next && rm -rf node_modules && rm -rf package-lock.json && rm -rf yarn.lock",
    "clean:build": "rm -rf .next",
    "clean:pwa": "rm -rf public/sw.js && rm -rf public/sw *.js && rm -rf public/workbox-*.js && rm -rf public/worker-*.js",
    "prebuild": "npm run clean:build",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "env:staging": "cp ./envs/.env.staging .env",
    "dev:staging": "npm run env:staging && next dev",
    "build:staging": "npm run env:staging && next build",
    "start:staging": "npm run env:staging && next start",
    "env:prod": "cp ./envs/.env.production .env",
    "dev:prod": "npm run env:prod && next dev",
    "build:prod": "npm run env:prod && next build",
    "start:prod": "npm run env:prod && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix --ignore-path .eslintignore",
    "lint:css": "prettier '**/*.{json,yaml,css,scss}' --write --ignore-path .eslintignore",
    "format": "npm run lint:fix && npm run lint:css",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^3.24.0",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@gsap/react": "^2.1.2",
    "@preact/signals-react": "^3.2.1",
    "@szhsin/react-accordion": "^1.4.1",
    "@tanstack/react-query": "^5.85.5",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.11.0",
    "classnames": "^2.5.1",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "gsap": "^3.13.0",
    "lenis": "^1.3.8",
    "markdown-it": "^14.1.0",
    "next": "15.4.3",
    "next-intl": "^4.3.4",
    "next-plugin-svgr": "^1.1.12",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hls-player": "^3.0.7",
    "react-inlinesvg": "^4.2.0",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sass": "^1.89.2",
    "sharp": "^0.34.3",
    "split-type": "^0.3.4",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.31.0",
    "@next/bundle-analyzer": "^15.4.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.25",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.38.0",
    "webpack": "^5.101.0"
  }
}
